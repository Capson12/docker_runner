FROM ubuntu:22.04
ENV DEBIAN_FRONTEND=noninteractive TZ=Europe/London

ARG TF_VERSION="1.5.7"
ARG TG_VERSION="latest"    # or set a specific tag like "v0.55.4"

# Install dependencies including Docker
RUN apt-get update && apt-get install -y \
    curl \
    sudo \
    jq \
    git \
    tzdata \
    unzip \
    gpg \
    awscli \
    lsb-release \
    ca-certificates \
    expect \
    apt-transport-https \
    software-properties-common \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Docker
RUN install -m 0755 -d /etc/apt/keyrings \
    && curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /etc/apt/keyrings/docker.gpg \
    && chmod a+r /etc/apt/keyrings/docker.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null \
    && apt-get update \
    && apt-get install -y docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install Terraform (from releases)
RUN curl -fsSL -o /tmp/terraform.zip "https://releases.hashicorp.com/terraform/${TF_VERSION}/terraform_${TF_VERSION}_linux_amd64.zip" \
 && unzip /tmp/terraform.zip -d /usr/local/bin \
 && rm /tmp/terraform.zip \
 && chmod +x /usr/local/bin/terraform

# Install Terragrunt (latest or pinned)
RUN if [ "${TG_VERSION}" = "latest" ]; then \
      TG_TAG=$(curl -s https://api.github.com/repos/gruntwork-io/terragrunt/releases/latest | jq -r .tag_name); \
    else \
      TG_TAG="${TG_VERSION}"; \
    fi \
 && curl -L -o /usr/local/bin/terragrunt "https://github.com/gruntwork-io/terragrunt/releases/download/${TG_TAG}/terragrunt_linux_amd64" \
 && chmod +x /usr/local/bin/terragrunt

# Verify tooling versions at build time
RUN terraform --version && terragrunt --version && docker --version

# Create a user for the runner
RUN useradd -m docker && echo "docker:docker" | chpasswd && adduser docker sudo \
    && echo "docker ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers \
    && usermod -aG docker docker

USER docker
WORKDIR /home/docker

# Download the GitHub runner
RUN curl -o actions-runner-linux-x64-2.325.0.tar.gz -L https://github.com/actions/runner/releases/download/v2.325.0/actions-runner-linux-x64-2.325.0.tar.gz \
    && tar xzf ./actions-runner-linux-x64-2.325.0.tar.gz \
    && rm ./actions-runner-linux-x64-2.325.0.tar.gz

# Install GitHub runner dependencies
RUN sudo ./bin/installdependencies.sh

# Add the entrypoint script
COPY entrypoint.sh .
RUN sudo chmod +x entrypoint.sh

ENTRYPOINT [ "./entrypoint.sh" ]
